{
  "manifest_version": 3,
  "name": "CTRL Zone",
  "version": "1.0",
  "description": "Focus mode extension that closes distracting websites",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CTRL Zone - Focus Mode",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}